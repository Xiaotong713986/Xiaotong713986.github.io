/* header */
header {
  margin-top: 0; }

.site-header {
  width: calc(100vw - 28px); }

.inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  gap: var(--gap);
  width: calc(99vw); }

.site-title {
  margin: 0;
  padding: 0; }

.site-title a {
  color: var(--color-header);
  display: block;
  background-image: none;
  line-height: 1.5rem;
  text-decoration: none;
  font-weight: 900;
  font-size: 1.5rem; }

/* nav menu */
.navbar {
  padding-right: 3rem;
  display: flex;
  font-size: 1.1rem; }

.nav-menu {
  list-style: none;
  display: flex;
  flex-wrap: nowrap;
  align-items: stretch; }

.nav-menu li {
  margin-left: 2rem; }

.nav-menu .active {
  color: var(--active-color); }

.nav-menu li a {
  border: 0;
  text-decoration: none;
  color: var(--color-header);
  text-transform: uppercase;
  font-weight: 900; }

