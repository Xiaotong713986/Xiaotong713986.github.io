/* basic */
body {
  background-color: var(--background-color);
  padding: 0; }

/* content */
#content {
  min-height: var(--content-min-height);
  background-color: var(--content-bgColor);
  width: var(--content-width);
  padding-left: 6px;
  padding-right: 6px;
  padding-top: 6px;
  /* border:solid 1px black; */ }

.post-content span {
  color: black;
  display: inline-block;
  font-size: 2rem;
  font-weight: 900; }

/* footer */
.site-footer {
  text-align: center;
  opacity: 0.85;
  margin-top: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: black;
  background-color: transparent;
  text-align: center;
  padding: 3px; }

.copyright {
  margin: 0; }

:root {
  --background-color: rgb(199, 192, 192);
  --content-bgColor: white;
  --content-min-height: calc(82vh - 6px);
  --content-width: calc(100vw - 30px);
  --active-color: blueviolet; }

